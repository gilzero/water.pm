{
    "name": "drupal/rivet",
    "type": "drupal-theme",
    "description": "Provides a Drupal base theme for the Rivet Design System from Indiana University.",
    "license": "GPL-2.0+",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "drupal/devel": "*",
        "drupal/devel_generate": "*",
        "drupal/iu_paragraphs": "^2.2",
        "drush/drush": "*"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "php-http/discovery": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true,
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true
        }
    },
    "homepage": "https://www.drupal.org/project/rivet",
    "authors": [
        {
            "name": "See contributors",
            "homepage": "https://www.drupal.org/node/3383900/committers"
        }
    ],
    "support": {
        "issues": "https://www.drupal.org/project/issues/rivet",
        "source": "https://git.drupalcode.org/project/rivet"
    }
}
