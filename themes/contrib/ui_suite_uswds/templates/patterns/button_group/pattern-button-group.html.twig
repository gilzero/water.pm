{% if variant and variant|lower != 'default' %}
  {% set attributes = attributes.addClass('usa-button-group--' ~ variant|lower) %}
{% endif %}

<ul{{ attributes.addClass('usa-button-group') }}>
  {% for button in buttons %}
    <li class="usa-button-group__item">
      {{ button }}
    </li>
  {% endfor %}
</ul>
