<li{{ attributes.addClass('usa-icon-list__item') }}>

  {% if not icon_attributes %}
    {% set icon_attributes = create_attribute() %}
  {% endif %}

  <div{{ icon_attributes.addClass('usa-icon-list__icon') }}>
    {{ pattern('icon', {
      'icon_name': icon_name
    }) }}
  </div>

  <div class="usa-icon-list__content">
    {% if header %}
      <h3 class="usa-icon-list__title">
        {{ header }}
      </h3>

      {% if body %}
        <div>
          {{ body }}
        </div>
      {% endif %}

    {% else %}
      {% if body %}
        <div>
          {{ body }}
        </div>
      {% endif %}
    {% endif %}
  </div>

</li>
