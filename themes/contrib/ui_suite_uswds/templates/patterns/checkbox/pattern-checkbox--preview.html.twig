<fieldset class="usa-fieldset">
  <legend class="usa-legend">This is a test of checkboxes</legend>

  {% for i in 0..4 %}
    <div class="usa-checkbox">
      {% set attributes = create_attribute({
        'id': 'test-checkbox-' ~ i,
        'name': 'test-checkbox-group'
      }) %}

      {% include 'pattern-checkbox.html.twig' %}

      {{ pattern('label', {
        'attributes': create_attribute({
          'class': [
            'usa-checkbox__label'
          ]
        }),
        'for_value': 'test-checkbox-' ~i,
        'label': 'Test checkbox-' ~ i
      }) }}
    </div>
  {% endfor %}
</fieldset>
